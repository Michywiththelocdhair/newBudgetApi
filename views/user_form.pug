extends layout

block content
  h1 #{title}

  form(method='POST' action='')
    div.form-group
      label(for='Email') Email:
      input#email.form-control(type='text', name='email' value=(undefined===user ? '' : user.email))
      label(for='Password') Password:
      input#password.form-control(type='text', name='password' value=(undefined===user ? '' : user.password))
      label(for='Username') Username:
      input#username.form-control(type='text', name='username' value=(undefined===user ? '' : user.username))
    button.btn.btn-primary(type='submit') Submit

  if errors
   ul
    for error in errors
     li!= error.msg
